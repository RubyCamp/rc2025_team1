<h2 class="text-center">
  お問い合わせ確認
</h2>
<div class="w-4/5 mx-auto bg-white border border-gray-200 rounded-lg shadow-md overflow-hidden">
  <table class="break-all w-full border-collapse">
  <thead>
    <tr>
      <th class="px-4 py-3 bg-gray-50 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider border-b border-gray-200">氏名</th>
      <th class="px-4 py-3 bg-gray-50 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider border-b border-gray-200">email</th>
      <th class="px-4 py-3 bg-gray-50 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider border-b border-gray-200">問い合わせ内容</th>
    </tr>
  </thead>
  <tbody>
    <% @inquiries.each do |inquiry| %>
      <tr>
        <td class="break-all px-4 py-3 whitespace-nowrap text-sm text-gray-900 border-b border-gray-200"><%= inquiry.name %></td>
        <td class="break-all px-4 py-3 whitespace-nowrap text-sm text-gray-900 border-b border-gray-200"><%= inquiry.email  %></td>
        <td class="break-all px-4 py-3 whitespace-normal text-sm text-gray-900 border-b border-gray-200"><%= inquiry.content %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div> 