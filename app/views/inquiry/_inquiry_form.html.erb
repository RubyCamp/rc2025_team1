
<%= form_with(url: inquiry_path, scope: :inquiry, local: true) do |form| %>
  <div class="mb-4">
    <%= form.label :name, "お名前", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :name, required: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :email, "メールアドレス", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.email_field :email, required: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-6">
    <%= form.label :message, "お問い合わせ内容", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :message, rows: 5, required: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="flex items-center justify-center">
    <%= form.submit "送信する", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
  </div>
<% end %>
